{
  "name": "AFA",
  "version": "1.0.0",
  "description": "Answers From All",
  "main": "index.js",
  "author": "David Hartsough",
  "license": "ISC",
  "browserify": {
    "transform": [
      "babelify"
    ]
  },
  "dependencies": {
    "material-ui": "^0.12.4",
    "parse": "^1.6.7",
    "parse-react": "^0.5.0",
    "react": "^0.14.0",
    "react-addons-create-fragment": "^0.14.0",
    "react-addons-pure-render-mixin": "^0.14.0",
    "react-addons-transition-group": "^0.14.0",
    "react-addons-update": "^0.14.0",
    "react-dom": "^0.14.0",
    "react-tap-event-plugin": "^0.2.1"
  },
  "devDependencies": {
    "autoprefixer": "*",
    "babelify": "*",
    "browser-sync": "*",
    "browserify": "*",
    "clean-css": "*",
    "eslint": "*",
    "eslint-plugin-react": "*",
    "html-minifier": "*",
    "postcss-cli": "*",
    "uglify-js": "*",
    "uncss": "*"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint ./more/js --ext .js,.jsx",
    "clean:full": "rm -r ./less/*",
    "copy:cp": "cp -R ./more/* ./less",
    "copy": "rsync -r ./more/* ./less --exclude *.html --exclude css/ --exclude js/",
    "clean": "rm ./less/index.html ./less/main.css ./less/main.js",
    "presetup": "npm run clean:full",
    "setup": "npm run copy",
    "bundle:js": "browserify ./more/js/index.jsx -o ./more/main.js",
    "minify:js": "uglifyjs ./more/main.js -c -o ./less/main.js",
	"mminify:js": "uglifyjs --compress warnings=false --mangle -o ./less/main.js ./more/main.js",
	"postmminify:js": "echo the JS has been minified",
    "mangle:js": "uglifyjs ./more/main.js -c -m -o ./less/main.js",
    "build:js": "npm run bundle:js",
    "postbuild:js": "cp ./more/main.js ./less",
    "uncss": "uncss -C ./more/css/main.css > ./more/css/main.css",
    "autoprefix": "postcss --use autoprefixer -o ./more/main.css ./more/css/main.css",
    "autoprefix:yo": "postcss --use autoprefixer -o ./less/main-ap.css ./less/main.css",
    "minify:css": "cleancss -o ./less/main.css ./more/main.css",
    "bundle:css": "cat ./more/css/*.css > ./more/main.css",
    "build:css": "npm run bundle:css",
    "ooobuild:css": "npm run autoprefix",
    "postbuild:css": "npm run minify:css",
    "minify:html": "html-minifier -o ./less/index.html --remove-comments --collapse-whitespace --remove-attribute-quotes ./more/index.html",
    "build:html": "npm run minify:html",
    "prebuild": "npm run setup",
    "build": "npm run build:js & npm run build:css & npm run build:html",
    "postbuild": "npm run serve:less",
    "serve:less": "browser-sync start --server less --port 8080",
    "serve:test": "browser-sync start --server test --port 8080",
    "serve:more": "browser-sync start --files ./more/css/main.css --server more --port 8080 --open http://localhost:8080"
  }
}
